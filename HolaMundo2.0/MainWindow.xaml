        <Button x:Name="NombreBoton" Content="Saludar" HorizontalAlignment="Left" Height="39" Margin="423,195,0,0" VerticalAlignment="Top" Width="137" FontSize="24" Click="Button_Click"/>
        <Button x:Name="NombreBotonLimpiar" Content="Limpiar" HorizontalAlignment="Left" Height="43" Margin="423,253,0,0" VerticalAlignment="Top" Width="137" FontSize="22" Click="NombreBotonLimpiar_Click"/>

